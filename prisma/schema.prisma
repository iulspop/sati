generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RecurringQuestion {
  id                 String   @id @default(cuid())
  order              Int
  question           String
  timestamp          DateTime @default(now())
  utcOffsetInMinutes Int
  answers            Answer[]
}

model Answer {
  id         String            @id @default(cuid())
  question   RecurringQuestion @relation(fields: [questionId], references: [id])
  questionId String
  response   Boolean
  timestamp  DateTime          @default(now())
}

model Slo {
  id               String   @id
  createdAt        DateTime
  name             String
  denominatorLabel String
  denominator      Int
  targetPercentage Float
  interpreter      String
  Stream           Stream[]
}

model Stream {
  id        String   @id
  slo       Slo      @relation(fields: [sloId], references: [id], onDelete: Cascade)
  createdAt DateTime
  source    String
  sloId     String
}
