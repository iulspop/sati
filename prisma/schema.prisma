// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserProfile {
  /// The Magic issuer of the user who created the account. Its a decentralized
  /// identifier (DID) that uniquely identifies the user.
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String   @default("")
}

model RecurringQuestion {
  id                 String   @id
  order              Int
  question           String
  timestamp          DateTime
  utcOffsetInMinutes Int
  answers            Answer[]
}

model Answer {
  id         String            @id
  question   RecurringQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  response   Boolean
  timestamp  DateTime
}
